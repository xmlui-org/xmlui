<App
    layout="vertical-full-header"
    noScrollbarGutters
    var.posts=`{[
      {
        title: "An XMLUI-powered blog",
        slug: "xmlui-powered-blog",
        description: "How we made this blog with a few dozen lines of XMLUI.",
        author: "Jon Udell",
        date: "2025-10-28",
        image: "blog-scrabble.png"
      },
      {
        title: "Reproducible XMLUI",
        slug: "xmlui-playground",
        description: "Use playgrounds to infuse docs with live examples, iterate on prototypes, and reproduce bugs.",
        author: "Jon Udell",
        date: "2025-10-27",
        image: "playground.png"
      },
      {
        title: "Introducing XMLUI",
        slug: "introducing-xmlui",
        description: "Let's make building user interfaces as easy as it was 30 years ago.",
        author: "Jon Udell",
        date: "2025-07-18",
        image: "xmlui-demo-gallery.png"
      }
    ]}`>
    <AppHeader>
        <property name="logoTemplate">
            <Link to="https://xmlui.org/">
                <Logo height="$space-8"/>
            </Link>
        </property>
        <property name="profileMenuTemplate">
            <Text variant="em">Tutorials, tips, best practices</Text>
        </property>
    </AppHeader>
    <NavPanel>
       <NavGroup label="Recent posts" to="/blog" initiallyExpanded>
            <NavLink
                label="An XMLUI-powered blog"
                to="/blog/{posts[0].slug}" />
            <NavLink
                label="Reproducible XMLUI"
                to="/blog/{posts[1].slug}" />
            <NavLink
                label="Introducing XMLUI"
                to="/blog/{posts[2].slug}" />

        </NavGroup>
    </NavPanel>
    <Pages fallbackPath="/404">
        <Page url="/">
            <BlogOverview posts="{posts}" />
        </Page>
        <Page url="/blog">
            <BlogOverview posts="{posts}" />
        </Page>
        <Page url="/blog/{posts[0].slug}">
            <BlogPage post="{posts[0]}" />
        </Page>
        <Page url="/blog/{posts[1].slug}">
            <BlogPage post="{posts[1]}" />
        </Page>
        <Page url="/blog/{posts[2].slug}">
            <BlogPage post="{posts[2]}" />
        </Page>
    </Pages>
    <Footer>
        <HStack width="100%">
            <Text>This site is an XMLUIâ„¢ app.</Text>
            <SpaceFiller />
            <ToneSwitch />
            <Image
              width="$space-6"
              height="$space-6"
              onClick="window.location.href = '/feed.rss'"
              src="/resources/rss.svg" />
        </HStack>
    </Footer>
</App>