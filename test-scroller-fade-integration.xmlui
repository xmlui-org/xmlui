<App scrollWholePage="false">
  <VStack gap="$space-8">
    <!-- Stack with showScrollerFade -->
    <Text fontSize="large" fontWeight="bold">Stack with showScrollerFade</Text>
    <Stack 
      height="200px" 
      scrollStyle="overlay" 
      showScrollerFade="true"
      backgroundColor="lightblue"
    >
      <Items data="{ Array.from({ length: 50 }).map((_, i) => ('Stack Item #' + (i + 1))) }">
        <Text value="{$item}" />
      </Items>
    </Stack>

    <!-- FlowLayout with showScrollerFade -->
    <Text fontSize="large" fontWeight="bold">FlowLayout with showScrollerFade</Text>
    <FlowLayout 
      height="200px" 
      scrollStyle="overlay" 
      showScrollerFade="true"
      backgroundColor="lightcoral"
    >
      <Items data="{ Array.from({ length: 100 }).map((_, i) => ('Flow Item #' + (i + 1))) }">
        <Text value="{$item}" padding="$space-2" />
      </Items>
    </FlowLayout>

    <!-- ScrollViewer for comparison -->
    <Text fontSize="large" fontWeight="bold">ScrollViewer with showScrollerFade</Text>
    <ScrollViewer 
      height="200px" 
      scrollStyle="overlay" 
      showScrollerFade="true"
      backgroundColor="lightgreen"
    >
      <Items data="{ Array.from({ length: 50 }).map((_, i) => ('ScrollViewer Item #' + (i + 1))) }">
        <Text value="{$item}" />
      </Items>
    </ScrollViewer>
  </VStack>
</App>
