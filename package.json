{
  "name": "xmlui-root",
  "version": "1.0.0",
  "description": "Root folder of XMLUI",
  "private": true,
  "workspaces": [
    "./xmlui",
    "./docs",
    "./blog",
    "./website",
    "./playground",
    "./tools/create-app",
    "./tools/vscode",
    "./tools/serve-optimized",
    "./packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@playwright/test": "1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "cross-env": "^10.1.0",
    "turbo": "^2.8.3"
  },
  "packageManager": "npm@10.9.2",
  "scripts": {
    "changeset:add": "changeset add",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "build-xmlui": "turbo run build:xmlui-all",
    "build-vscode-extension": "turbo run xmlui-vscode#build:vsix",
    "test": "turbo run //#_test:e2e:with-unit-tests",
    "test-smoke": "turbo run //#_test:e2e:smoke:with-unit-tests",
    "test-e2e-dev": "playwright test",
    "test:e2e": "cross-env PLAYWRIGHT_USE_DEV_SERVER=false playwright test",
    "test:e2e:smoke": "cross-env PLAYWRIGHT_USE_DEV_SERVER=false playwright test --project=*-smoke",
    "build-extensions": "turbo run build:extension",
    "build-docs": "turbo run build:docs",
    "build-playground": "turbo run build:playground",
    "release-docs": "turbo run release:docs",
    "build-blog": "turbo run build:blog",
    "watch-docs-content": "turbo watch generate-docs-summaries",
    "generate-docs": "turbo run generate-docs",
    "_test:e2e:with-unit-tests": "cross-env PLAYWRIGHT_USE_DEV_SERVER=false playwright test",
    "_test:e2e:smoke:with-unit-tests": "cross-env PLAYWRIGHT_USE_DEV_SERVER=false playwright test --project=*-smoke"
  },
  "dependencies": {
    "echarts": "6.0.0",
    "echarts-for-react": "3.0.6"
  }
}
