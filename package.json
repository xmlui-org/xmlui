{
  "name": "xmlui-root",
  "version": "1.0.0",
  "description": "Root folder of XMLUI",
  "private": true,
  "workspaces": [
    "./xmlui",
    "./docs",
    "./blog",
    "./tools/create-app",
    "./tools/vscode",
    "./packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@playwright/test": "1.53.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "cross-env": "^10.1.0",
    "turbo": "^2.5.6"
  },
  "packageManager": "npm@10.9.2",
  "scripts": {
    "changeset:add": "changeset add",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "build-xmlui": "turbo run build:xmlui-all",
    "build-vscode-extension": "turbo run xmlui-vscode#build:vsix",
    "test": "turbo run test:all",
    "test-smoke": "turbo run test:smoke",
    "test-e2e-dev": "playwright test",
    "test:e2e": "cross-env PLAYWRIGHT_USE_DEV_SERVER=false playwright test ",
    "test:e2e:smoke": "cross-env PLAYWRIGHT_USE_DEV_SERVER=false playwright test --project=*-smoke",
    "publish-packages": "turbo run build:xmlui-all test && npm run changeset:publish",
    "build-extensions": "turbo run build:extension",
    "build-docs": "turbo run build:docs",
    "build-blog": "turbo run build:blog",
    "watch-docs-content": "turbo watch generate-docs-summaries",
    "generate-docs": "turbo run generate-docs"
  }
}
