{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false
    // "esModuleInterop": true,
    // "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
