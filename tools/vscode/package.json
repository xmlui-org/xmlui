{
  "name": "xmlui-lang",
  "description": "VSCode language support for XMLUI language",
  "author": "Tamas Kapitany",
  "publisher": "tamas-kapitany",
  "license": "MIT",
  "version": "0.0.15",
  "repository": {
    "type": "git",
    "url": "https://github.com/xmlui-com/xmlui.git"
  },
  "categories": [],
  "keywords": [],
  "engines": {
    "vscode": "^1.85.0",
    "node": "^18.17.1",
    "npm": "^9.6.7"
  },
  "activationEvents": [
    "onLanguage:xmlui"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "xmlui",
        "aliases": [
          "XMLUI",
          "xmlui"
        ],
        "extensions": [
          ".xmlui"
        ]
      },
      {
        "id": "javascript",
        "aliases": [
          "XS",
          "xs"
        ],
        "extensions": [
          ".xs"
        ]
      }
    ],
    "grammars": [
      {
        "language": "xmlui",
        "scopeName": "source.xmlui",
        "path": "./syntaxes/xmlui.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascrip": "javascript"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint . && prettier --check .",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "reformat": "prettier --write .",
    "create:package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.5.4"
  }
}
