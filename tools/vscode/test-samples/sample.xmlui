<App>
<Page title="Sample XMLUI Page">
<VStack spacing="8" alignItems="stretch">
<Text value="Hello World!"  fontSize="24px"   fontWeight="bold" />
<HStack spacing="4">
<Button label="Click Me" onClick="alert('Button clicked!')" />
<Button
label="Another Button"
variant="outline"
onClick="console.log('Another button clicked')" />
</HStack>
<Form onSubmit="handleSubmit()">
<TextInput
placeholder="Enter your name"
value="{name}"
onChange="(e) => name = e.target.value" />
<CheckBox label="I agree to terms" value="{agreed}" onChange="(e) => agreed = e.target.value" />
<Button type="submit" label="Submit" />
</Form>
<script>
  // This is a script block that should preserve formatting
  function handleSubmit() {
    console.log('Form submitted!');
    console.log('Name:', name);
    console.log('Agreed:', agreed);
    
    if (agreed) {
      showSuccessMessage();
    } else {
      showErrorMessage();
    }
  }
  
  function showSuccessMessage() {
    // Success logic here
    console.log('Success!');
  }
  
  function showErrorMessage() {
    // Error logic here
    console.log('Error!');
  }
</script>
</VStack>
</Page>
</App>
