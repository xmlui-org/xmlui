<Component name="TwoColumnCode">
  <FlowLayout>
    <Stack width="*" height="100%" verticalAlignment="center">
      <Markdown codeHighlighter="{appGlobals.highlighter}">
        <Slot name="codeTemplate" />
      </Markdown>
    </Stack>
    <Stack width="*" height="100%" verticalAlignment="center">
      <Markdown>
        <Slot />
      </Markdown>
    </Stack>
  </FlowLayout>
</Component>