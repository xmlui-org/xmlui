<Component name="MarkdownPage">
    <HStack gap="$space-5">
        <VStack width="*">
            <Breadcrumb />
            <Markdown
                content="{$props.content}"
                data="{$props.url}"
                showHeadingAnchors="true"
            />
        </VStack>
        <TableOfContents maxHeadingLevel="3" width="$space-64" when="{mediaSize.sizeIndex > 3}"/>
    </HStack>    
</Component>