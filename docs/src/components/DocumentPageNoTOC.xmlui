<Component name="DocumentPageNoTOC">
  <Stack
    width="{$props.width ? $props.width : mediaSize.sizeIndex > 2 ? '85%' : '100%'}"
    maxWidth="1200px">
    <Markdown
      when="{$props.content || $props.url}"
      content="{$props.content}"
      data="{$props.url}" />
    <Slot when="{!$props.content && !$props.url}" />
    <DocumentLinks />
  </Stack>
</Component>