<Component name="LinkButton">
  <Link 
    when="{mediaSize.sizeIndex > 2}" 
    to="{$props.to}" 
    target="{$props.blank ? '_blank' : ''}" 
    active="true">
    <Button 
      padding="$space-2" 
      variant="ghost" 
      icon="{$props.icon}"
      onClick="emitEvent('click')">
      <Text>{$props.label}</Text>
    </Button>
  </Link>
</Component>