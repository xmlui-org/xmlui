<Component name="InfoCard">
  <Card 
    height="{$props.height}"
    onClick="{Actions.navigate('/contacts/' + $props.link)}">
    <Text variant="subtitle" value="{$props.title}"/>
    <CVStack width="100%">
      <H2 color="{$props.color}" fontSize="4em">
        {$props.isLoading ? "..." : $props.value}
      </H2>
    </CVStack>
  </Card>
</Component>