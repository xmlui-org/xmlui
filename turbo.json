{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["CI"],
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build:bin": {
      "outputs": ["dist/bin/**"]
    },
    "build:xmlui": {
      "outputs": ["dist/lib/**"]
    },
    "build:xmlui-standalone": {
      "outputs": ["dist/standalone/**"]
    },
    "build:xmlui-metadata": {
      "inputs": ["$TURBO_DEFAULT$", "!src/language-server/xmlui-metadata-generated.js"],
      "outputs": ["dist/metadata/**"]
    },
    "gen:langserver-metadata": {
      "dependsOn": ["build:xmlui-metadata"],
      "outputs": ["src/language-server/xmlui-metadata-generated.js"]
    },
    "build:extension": {
      "dependsOn": ["^build:extension"],
      "outputs": ["dist/**"]
    },
    "build:meta": {
      "outputs": ["dist/**"]
    },
    "xmlui-vscode#build:vsix": {
      "dependsOn": ["xmlui-vscode#build"],
      "outputs": ["xmlui-vscode-*.vsix"]
    },
    "xmlui-vscode#build": {
      "dependsOn": ["^gen:langserver-metadata"],
      "outputs": ["dist/**"]
    },
    "build:xmlui-all": {
      "dependsOn": [
        "build:bin",
        "build:xmlui-metadata",
        "build:xmlui",
        "build:xmlui-standalone",
        "build:extension"
      ],
      "outputs": ["dist/**"]
    },
    "gen:releases": {
      "env": ["GITHUB_TOKEN", "DOCS_XMLUI_MAX_RELEASES_LENGTH"],
      "outputs": ["public/resources/files/releases.json"]
    },
    "gen:download-latest-xmlui-release": {
      "outputs": ["public/resources/files/for-download/xmlui/xmlui-standalone.umd.js"]
    },
    "generate-docs": {
      "outputs": ["scripts/generate-docs/metadata/**", "$TURBO_ROOT$/docs/content/**"],
      "inputs": ["$TURBO_DEFAULT$"],
      "dependsOn": ["build:xmlui-metadata", "build:meta"]
    },
    "generate-docs-summaries": {
      "outputs": ["$TURBO_ROOT$/docs/content/**"],
      "inputs": ["$TURBO_DEFAULT$", "dist/metadata/**"],
      "dependsOn": ["generate-docs"]
    },
    "build:docs": {
      "dependsOn": [
        "^build:extension",
        "^build:xmlui",
        "gen:releases",
        "gen:download-latest-xmlui-release",
        "generate-docs-summaries"
      ],
      "inputs": ["$TURBO_DEFAULT$", "content/**"],
      "outputs": ["dist/**"]
    },
    "release:docs": {
      "dependsOn": ["build:docs"],
      "outputs": ["dist/ui.zip"]
    },
    "build:blog": {
      "dependsOn": ["^build:extension", "^build:xmlui"],
      "outputs": ["dist/**"]
    },
    "xmlui#build:xmlui-test-bed": {
      "dependsOn": ["build:extension"],
      "outputs": ["src/testing/infrastructure/dist/**"]
    },
    "test:all": {
      "dependsOn": ["test:unit", "//#test:e2e"],
      "outputs": ["playwright-report/**"]
    },
    "test:smoke": {
      "dependsOn": ["test:unit", "//#test:e2e:smoke"],
      "outputs": ["playwright-report/**"]
    },
    "test:unit": {
      "outputs": []
    },
    "//#test:e2e": {
      "env": ["PLAYWRIGHT_USE_DEV_SERVER"],
      "dependsOn": ["xmlui#build:xmlui-test-bed"],
      "outputs": ["playwright-report/**"]
    },
    "//#test:e2e:smoke": {
      "env": ["PLAYWRIGHT_USE_DEV_SERVER"],
      "dependsOn": ["xmlui#build:xmlui-test-bed"],
      "outputs": ["playwright-report/**"]
    }
  }
}
