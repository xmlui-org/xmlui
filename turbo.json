{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["CI"],
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build:for-node": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "outputs": ["dist/bin/**", "dist/for-node/**"]
    },
    "build:xmlui": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "outputs": ["dist/lib/**"]
    },
    "build:xmlui-standalone": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "outputs": ["dist/standalone/**"]
    },
    "build:xmlui-metadata": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "!src/language-server/xmlui-metadata-generated.js",
        "!**/*.spec.ts",
        "!**/*.test.ts"
      ],
      "outputs": ["dist/metadata/**"]
    },
    "gen:langserver-metadata": {
      "dependsOn": ["build:xmlui-metadata"],
      "inputs": ["scripts/**"],
      "outputs": ["src/language-server/xmlui-metadata-generated.js"]
    },
    "build:extension": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "dependsOn": ["^build:extension"],
      "outputs": ["dist/**"]
    },
    "build:meta": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "outputs": ["dist/**"]
    },
    "xmlui-vscode#build:vsix": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "dependsOn": ["xmlui-vscode#build"],
      "outputs": ["xmlui-vscode-*.vsix"]
    },
    "xmlui-vscode#build": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "dependsOn": ["^gen:langserver-metadata"],
      "outputs": ["dist/**"]
    },
    "build:xmlui-all": {
      "dependsOn": [
        "build:for-node",
        "build:xmlui-metadata",
        "build:xmlui",
        "build:xmlui-standalone",
        "build:extension"
      ],
      "outputs": ["dist/**"]
    },
    "gen:releases": {
      "cache": false,
      "description": "fetches the releases from github, thus never should be cached."
    },
    "gen:download-latest-xmlui-release": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "!public/resources/files/for-download/xmlui/xmlui-standalone.umd.js"
      ],
      "outputs": ["public/resources/files/for-download/xmlui/xmlui-standalone.umd.js"]
    },
    "generate-docs": {
      "cache": false,
      "dependsOn": ["build:xmlui-metadata", "build:meta"]
    },
    "generate-docs-summaries": {
      "cache": false,
      "dependsOn": ["generate-docs"]
    },
    "build:docs": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "dependsOn": [
        "^build:extension",
        "^build:xmlui",
        "gen:releases",
        "gen:download-latest-xmlui-release",
        "generate-docs-summaries"
      ],
      "outputs": ["dist/**"]
    },
    "release:docs": {
      "dependsOn": ["build:docs"],
      "outputs": ["dist/ui.zip"]
    },
    "build:blog": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "dependsOn": ["^build:extension", "^build:xmlui"],
      "outputs": ["dist/**"]
    },
    "build:playground": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "dependsOn": ["^build:extension", "^build:xmlui"],
      "outputs": ["dist/**"]
    },
    "xmlui#build:xmlui-test-bed": {
      "dependsOn": ["build:extension"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.spec.ts", "!**/*.test.ts"],
      "outputs": ["src/testing/infrastructure/dist/**"]
    },
    "xmlui#test:unit": {
      "outputs": []
    },
    "//#_test:e2e:with-unit-tests": {
      "env": ["PLAYWRIGHT_USE_DEV_SERVER"],
      "dependsOn": ["xmlui#build:xmlui-test-bed", "xmlui#test:unit"],
      "outputs": ["playwright-report/**"]
    },
    "//#_test:e2e:smoke:with-unit-tests": {
      "env": ["PLAYWRIGHT_USE_DEV_SERVER"],
      "dependsOn": ["xmlui#build:xmlui-test-bed", "xmlui#test:unit"],
      "outputs": ["playwright-report/**"]
    },
    "//#test:e2e": {
      "env": ["PLAYWRIGHT_USE_DEV_SERVER"],
      "dependsOn": ["xmlui#build:xmlui-test-bed"],
      "outputs": ["playwright-report/**"]
    },
    "//#test:e2e:smoke": {
      "env": ["PLAYWRIGHT_USE_DEV_SERVER"],
      "dependsOn": ["xmlui#build:xmlui-test-bed"],
      "outputs": ["playwright-report/**"]
    }
  }
}
