<Component name="IconInfoCard">
  <Card height="{$props.height}" width="{$props.width}">
    <HStack verticalAlignment="center">
      <CHStack 
        backgroundColor="{$props.iconBackgroundColor}"
        width="$space-10"
        height="$space-10"
        radius="$radius">
        <Icon name="{$props.iconName}" size="$space-6" />
      </CHStack>
      <VStack gap="0">
        <Slot />
      </VStack>
    </HStack>
  </Card>
</Component>